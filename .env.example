# aeo-infra environment configuration
# Copy to .env and customize for your environment

# =============================================================================
# User Configuration
# =============================================================================

# Default SSH username for all hosts
MESH_DEFAULT_USER=your-username

# =============================================================================
# Server Configuration (Headscale coordinator)
# =============================================================================

# Server hostname (used in documentation and defaults)
MESH_SERVER_HOST=server.local
MESH_SERVER_IP=192.168.1.10

# Headscale port
MESH_HEADSCALE_PORT=8080

# =============================================================================
# Client Configuration
# =============================================================================

# Client hostname (WSL/Windows machine)
MESH_CLIENT_HOST=client.local
MESH_CLIENT_IP=192.168.1.20

# =============================================================================
# Shared Folders
# =============================================================================

# Linux shared folder path
MESH_SHARED_FOLDER_LINUX=/opt/shared

# Windows shared folder path
MESH_SHARED_FOLDER_WINDOWS=C:\shared

# =============================================================================
# VM Configuration (vms/)
# =============================================================================

# VM storage directory
VM_STORAGE_DIR=/storage

# VM config directory
VM_CONFIG_DIR=/storage/vms

# VM bridge subnet (without last octet)
VM_SUBNET=192.168.50

# VM bridge gateway (host IP on bridge)
VM_GATEWAY=192.168.50.1
